@model IEnumerable<ABCRetailers.Models.Order>
@{
    ViewData["Title"] = "Track My Orders";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h3 class="text-dark fw-normal">Track Orders</h3>
            </div>

            <!-- Order Statistics -->
            @if (Model != null && Model.Any())
            {
                var recentOrder = Model.OrderByDescending(o => o.OrderDateUtc).First();
                var pendingOrders = Model.Count(o => o.Status == ABCRetailers.Models.OrderStatus.Submitted ||
                o.Status == ABCRetailers.Models.OrderStatus.Processing);

                <div class="row mb-4">
                    <div class="col-md-4">
                        <div class="card bg-dark text-white shadow-sm border-0">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h6 class="card-title">Total Orders</h6>
                                        <h3 class="mb-0">@Model.Count()</h3>
                                    </div>
                                    <div class="align-self-center">
                                        <i class="fas fa-shopping-bag fa-2x opacity-50"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card bg-secondary text-white shadow-sm border-0">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h6 class="card-title">Pending</h6>
                                        <h3 class="mb-0">@pendingOrders</h3>
                                    </div>
                                    <div class="align-self-center">
                                        <i class="fas fa-clock fa-2x opacity-50"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card bg-success text-white shadow-sm border-0">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h6 class="card-title">Latest Order</h6>
                                        <small>@FormatLocal(recentOrder.OrderDateUtc)</small>
                                    </div>
                                    <div class="align-self-center">
                                        <i class="fas fa-calendar-check fa-2x opacity-50"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }

            @if (Model != null && Model.Any())
            {
                <div class="card shadow border-0">
                    <div class="card-header bg-light">
                        <h5 class="mb-0 text-dark">
                            Order History
                            <span class="badge bg-dark">@Model.Count()</span>
                        </h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Order ID</th>
                                        <th>Product</th>
                                        <th>Quantity</th>
                                        <th>Total</th>
                                        <th>Order Date</th>
                                        <th>Status</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in Model.OrderByDescending(o => o.OrderDateUtc))
                                    {
                                        <tr>
                                            <td>
                                                <small class="text-muted">@order.Id</small>
                                            </td>
                                            <td>
                                                <strong class="text-dark">@order.ProductName</strong>
                                                @if (!string.IsNullOrEmpty(order.ProductId))
                                                {
                                                    <br />
                                                    <small class="text-muted">ID: @order.ProductId</small>
                                                }
                                            </td>
                                            <td>@order.Quantity</td>
                                            <td class="fw-bold text-dark">
                                                @order.TotalAmount.ToString("C")
                                            </td>
                                            <td>
                                                <small class="text-dark">
                                                    @FormatLocal(order.OrderDateUtc)<br />
                                                    <span class="text-muted">@FormatTime(order.OrderDateUtc)</span>
                                                </small>
                                            </td>
                                            <td>
                                                @await Html.PartialAsync("_OrderStatusBadge", order.Status)
                                            </td>
                                            <td>
                                                <form method="post" asp-action="DeleteCustomerOrder" asp-route-id="@order.Id" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-sm btn-outline-dark"
                                                            onclick="return confirm('Are you sure you want to delete this order?')"
                                                            title="Delete Order">
                                                        Delete
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <div class="mb-4">
                        <i class="fas fa-box-open fa-4x text-muted opacity-50"></i>
                    </div>
                    <h5 class="text-dark mb-3">No Orders Found</h5>
                    <p class="text-muted mb-4">
                        You haven't placed any orders yet.
                    </p>
                    <a asp-controller="Product" asp-action="Index" class="btn btn-dark">
                        Start Shopping
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@functions {
    string FormatLocal(DateTimeOffset? dto)
    {
        if (!dto.HasValue) return "-";
        return dto.Value.ToLocalTime().ToString("MMM dd, yyyy");
    }

    string FormatTime(DateTimeOffset? dto)
    {
        if (!dto.HasValue) return "";
        return dto.Value.ToLocalTime().ToString("hh:mm tt");
    }
}