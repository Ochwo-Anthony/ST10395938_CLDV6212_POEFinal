@model ABCRetailers.Models.ViewModels.RegisterViewModel

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow border-0">
            <div class="card-header bg-dark text-white py-4">
                <h3 class="card-title mb-0 text-center fw-normal">
                    <i class="fas fa-user-plus me-2"></i>Create Account
                </h3>
            </div>
            <div class="card-body p-5">
                <form asp-action="Register" method="post">
                    <!-- Login Information Section -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <h6 class="text-dark fw-medium border-bottom pb-2 mb-3">
                                Login Information
                            </h6>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Username" class="form-label text-dark fw-medium">
                                Username
                            </label>
                            <input asp-for="Username" class="form-control border" placeholder="Choose a username" />
                            <span asp-validation-for="Username" class="text-danger small mt-1"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="PasswordHash" class="form-label text-dark fw-medium">
                                Password
                            </label>
                            <input asp-for="PasswordHash" type="password" class="form-control border" placeholder="Create a password" />
                            <span asp-validation-for="PasswordHash" class="text-danger small mt-1"></span>
                        </div>
                        <div class="col-12 mb-3">
                            <label asp-for="Role" class="form-label text-dark fw-medium">
                                Account Type
                            </label>
                            <select asp-for="Role" class="form-select border" id="roleSelect">
                                <option value="Customer">Customer</option>
                                <option value="Admin">Administrator</option>
                            </select>
                            <span asp-validation-for="Role" class="text-danger small mt-1"></span>
                        </div>
                    </div>

                    <!-- Customer Profile Section -->
                    <div class="row mb-4" id="customerDetailsSection">
                        <div class="col-12">
                            <h6 class="text-dark fw-medium border-bottom pb-2 mb-3">
                                Personal Information
                            </h6>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Name" class="form-label text-dark fw-medium">
                                First Name
                            </label>
                            <input asp-for="Name" class="form-control border" placeholder="Enter your first name" />
                            <span asp-validation-for="Name" class="text-danger small mt-1"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Surname" class="form-label text-dark fw-medium">
                                Last Name
                            </label>
                            <input asp-for="Surname" class="form-control border" placeholder="Enter your last name" />
                            <span asp-validation-for="Surname" class="text-danger small mt-1"></span>
                        </div>
                        <div class="col-12 mb-3">
                            <label asp-for="Email" class="form-label text-dark fw-medium">
                                Email Address
                            </label>
                            <input asp-for="Email" type="email" class="form-control border" placeholder="Enter your email address" />
                            <span asp-validation-for="Email" class="text-danger small mt-1"></span>
                        </div>
                        <div class="col-12 mb-3">
                            <label asp-for="ShippingAddress" class="form-label text-dark fw-medium">
                                Shipping Address
                            </label>
                            <textarea asp-for="ShippingAddress" class="form-control border" rows="3" placeholder="Enter your complete shipping address"></textarea>
                            <span asp-validation-for="ShippingAddress" class="text-danger small mt-1"></span>
                        </div>
                    </div>

                    <!-- Admin Info Message -->
                    <div class="alert alert-secondary border-0 shadow-sm mb-4 d-none" id="adminInfoMessage">
                        <i class="fas fa-info-circle me-2"></i>
                        <strong>Administrator Account:</strong> Only username and password are required for admin accounts.
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-dark btn-lg">
                            Create Account
                        </button>
                    </div>
                </form>

                <div class="text-center mt-4 pt-3 border-top">
                    <p class="text-muted mb-3">Already have an account?</p>
                    <a asp-action="Login" class="btn btn-outline-dark">
                        Sign In
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const roleSelect = document.getElementById('roleSelect');
            const customerDetailsSection = document.getElementById('customerDetailsSection');
            const adminInfoMessage = document.getElementById('adminInfoMessage');

            function toggleCustomerDetails() {
                if (roleSelect.value === 'Customer') {
                    customerDetailsSection.style.display = 'flex';
                    adminInfoMessage.classList.add('d-none');

                    document.querySelectorAll('#customerDetailsSection input, #customerDetailsSection textarea').forEach(field => {
                        field.required = true;
                    });
                } else {
                    customerDetailsSection.style.display = 'none';
                    adminInfoMessage.classList.remove('d-none');

                    document.querySelectorAll('#customerDetailsSection input, #customerDetailsSection textarea').forEach(field => {
                        field.required = false;
                        field.value = '';
                    });
                }
            }

            toggleCustomerDetails();
            roleSelect.addEventListener('change', toggleCustomerDetails);
        });
    </script>
}