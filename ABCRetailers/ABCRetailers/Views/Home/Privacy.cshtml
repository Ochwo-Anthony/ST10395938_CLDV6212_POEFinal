@{
    ViewData["Title"] = "Contact Us";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow border-0">
                <div class="card-header bg-dark text-white py-4">
                    <h3 class="h5 mb-0 fw-normal">Contact Us</h3>
                </div>
                <div class="card-body p-4">
                    <!-- Contact Information -->
                    <div class="row mb-5">
                        <div class="col-md-6">
                            <h5 class="text-dark fw-medium mb-4">Get In Touch</h5>
                            <div class="mb-4">
                                <div class="d-flex align-items-center mb-3">
                                    <i class="fas fa-map-marker-alt text-dark me-3"></i>
                                    <div>
                                        <h6 class="mb-1 text-dark fw-medium">Our Address</h6>
                                        <p class="text-muted mb-0">
                                            123 Retail District<br>
                                            Commerce Square<br>
                                            Johannesburg, 2000<br>
                                            South Africa
                                        </p>
                                    </div>
                                </div>
                                <div class="d-flex align-items-center mb-3">
                                    <i class="fas fa-phone text-dark me-3"></i>
                                    <div>
                                        <h6 class="mb-1 text-dark fw-medium">Phone</h6>
                                        <p class="text-muted mb-0">+27 (0) 11 123 4567</p>
                                    </div>
                                </div>
                                <div class="d-flex align-items-center mb-3">
                                    <i class="fas fa-envelope text-dark me-3"></i>
                                    <div>
                                        <h6 class="mb-1 text-dark fw-medium">Email</h6>
                                        <p class="text-muted mb-0">info@abcretailers.co.za</p>
                                    </div>
                                </div>
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-clock text-dark me-3"></i>
                                    <div>
                                        <h6 class="mb-1 text-dark fw-medium">Business Hours</h6>
                                        <p class="text-muted mb-0">
                                            Mon-Fri: 8:00 AM - 6:00 PM<br>
                                            Sat: 9:00 AM - 2:00 PM<br>
                                            Sun: Closed
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <h5 class="text-dark fw-medium mb-4">Send Us a Message</h5>
                            <form>
                                <div class="mb-3">
                                    <label class="form-label text-dark fw-medium">Full Name</label>
                                    <input type="text" class="form-control border" placeholder="Your name">
                                </div>
                                <div class="mb-3">
                                    <label class="form-label text-dark fw-medium">Email Address</label>
                                    <input type="email" class="form-control border" placeholder="your.email@example.com">
                                </div>
                                <div class="mb-3">
                                    <label class="form-label text-dark fw-medium">Subject</label>
                                    <input type="text" class="form-control border" placeholder="Message subject">
                                </div>
                                <div class="mb-3">
                                    <label class="form-label text-dark fw-medium">Message</label>
                                    <textarea class="form-control border" rows="4" placeholder="Your message..."></textarea>
                                </div>
                                <button type="submit" class="btn btn-dark">Send Message</button>
                            </form>
                        </div>
                    </div>

                    <!-- Map Section -->
                    <div class="row mb-5">
                        <div class="col-12">
                            <h5 class="text-dark fw-medium mb-4">Find Us</h5>
                            <div class="rounded overflow-hidden shadow-sm">
                                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3583.4770471853158!2d27.873880075411215!3d-26.08334197715115!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x1e959ef5277b96a7%3A0xc4aa15508f8e5e8c!2sIIE%20MSA!5e0!3m2!1sen!2sza!4v1763120365859!5m2!1sen!2sza"
                                        width="100%"
                                        height="400"
                                        style="border:0;"
                                        allowfullscreen=""
                                        loading="lazy"
                                        referrerpolicy="no-referrer-when-downgrade">
                                </iframe>
                            </div>
                            <div class="text-center mt-3">
                                <p class="text-muted small mb-0">
                                    <i class="fas fa-map-marker-alt me-1"></i>
                                    123 Retail District, Commerce Square, Johannesburg, 2000
                                </p>
                            </div>
                        </div>
                    </div>

                    <!-- YouTube Video Section -->
                    <div class="row">
                        <div class="col-12">
                            <h5 class="text-dark fw-medium mb-4">About ABC Retailers</h5>
                            <div class="ratio ratio-16x9 rounded overflow-hidden shadow-sm">
                                <iframe src="https://www.youtube.com/embed/2KrGaHWlCXU?si=VMlrqvWCHuzt2KCi"
                                        title="YouTube video player"
                                        frameborder="0"
                                        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
                                        allowfullscreen>
                                </iframe>
                            </div>
                            <div class="text-center mt-3">
                                <p class="text-muted small mb-0">
                                    Learn more about our company story, values, and commitment to quality service
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>