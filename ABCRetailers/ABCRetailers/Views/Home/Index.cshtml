@model ABCRetailers.Models.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container py-4">
    <!-- Header -->
    <div class="text-center mb-5">
        <h1 class="display-5 fw-semibold text-dark mb-3">Dashboard</h1>
        <p class="lead text-muted">Welcome to ABC Retailers Management System</p>
    </div>

    <!-- Statistics Cards -->
    <div class="row g-4 mb-5">
        <div class="col-md-3 col-sm-6">
            <div class="card h-100 shadow border-0 text-center p-4">
                <div class="card-body">
                    <i class="fas fa-users fa-2x text-dark mb-3 opacity-75"></i>
                    <h4 class="text-dark mb-2">@Model?.CustomerCount</h4>
                    <h6 class="text-muted mb-3">Customers</h6>
                    <a asp-controller="Customer" asp-action="Index" class="btn btn-outline-dark btn-sm">View Customers</a>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="card h-100 shadow border-0 text-center p-4">
                <div class="card-body">
                    <i class="fas fa-box fa-2x text-dark mb-3 opacity-75"></i>
                    <h4 class="text-dark mb-2">@Model?.ProductCount</h4>
                    <h6 class="text-muted mb-3">Products</h6>
                    <a asp-controller="Product" asp-action="Index" class="btn btn-outline-dark btn-sm">View Products</a>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="card h-100 shadow border-0 text-center p-4">
                <div class="card-body">
                    <i class="fas fa-shopping-cart fa-2x text-dark mb-3 opacity-75"></i>
                    <h4 class="text-dark mb-2">@Model?.OrderCount</h4>
                    <h6 class="text-muted mb-3">Orders</h6>
                    <a asp-controller="Order" asp-action="Index" class="btn btn-outline-dark btn-sm">View Orders</a>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="card h-100 shadow border-0 text-center p-4">
                <div class="card-body">
                    <i class="fas fa-upload fa-2x text-dark mb-3 opacity-75"></i>
                    <h4 class="text-dark mb-2">Files</h4>
                    <h6 class="text-muted mb-3">Upload Center</h6>
                    <a asp-controller="Upload" asp-action="Index" class="btn btn-outline-dark btn-sm">Upload Files</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Featured Products Section -->
    <div class="row mt-5">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h3 class="text-dark fw-normal">Featured Products</h3>
                <a asp-controller="Product" asp-action="Index" class="btn btn-outline-dark btn-sm">
                    View All Products
                </a>
            </div>

            @if (Model?.FeaturedProducts?.Any() == true)
            {
                <div class="row g-4">
                    @foreach (var product in Model.FeaturedProducts.Take(8))
                    {
                        <div class="col-xl-3 col-lg-4 col-md-6">
                            <div class="card h-100 shadow-sm border-0">
                                @if (!string.IsNullOrWhiteSpace(product.ImageUrl))
                                {
                                    <img src="@product.ImageUrl" class="card-img-top" alt="@product.ProductName"
                                         style="height: 200px; object-fit: cover;">
                                }
                                else
                                {
                                    <div class="card-img-top bg-light d-flex align-items-center justify-content-center"
                                         style="height: 200px;">
                                        <i class="fas fa-image fa-2x text-muted opacity-50"></i>
                                    </div>
                                }

                                <div class="card-body d-flex flex-column">
                                    <h6 class="card-title text-dark mb-2">@product.ProductName</h6>
                                    <p class="card-text text-muted small flex-grow-1">
                                        @{
                                            var desc = product.Description ?? "";
                                            var displayDesc = desc.Length > 80 ? desc.Substring(0, 80) + "…" : desc;
                                        }
                                        @displayDesc
                                    </p>
                                    <div class="mt-auto pt-3">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <span class="text-dark fw-semibold">@product.Price.ToString("C")</span>
                                            <small class="text-muted">@product.StockAvailable in stock</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-box-open fa-3x text-muted mb-3 opacity-50"></i>
                    <h5 class="text-muted">No Products Available</h5>
                    <p class="text-muted mb-4">Start adding products to your catalog.</p>
                    <a asp-controller="Product" asp-action="Create" class="btn btn-dark">
                        Add First Product
                    </a>
                </div>
            }
        </div>
    </div>
</div>