@model ABCRetailers.Models.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "Home";
}

<div class="container py-5">
    <!-- Header -->
    <div class="text-center mb-5">
        <h1 class="display-4 text-primary fw-bold">
            <i class="fas fa-store"></i> Welcome to ABC Retailers!
        </h1>
        <p class="lead">Your one-stop shop for the best deals and latest products</p>
    </div>

    <!-- Action Cards -->
    <div class="row g-4 mb-5">
        <div class="col-md-3 col-sm-6">
            <div class="card h-100 shadow-sm text-center p-3">
                <i class="fas fa-users fa-2x text-primary mb-3"></i>
                <h5>@Model?.CustomerCount Customers</h5>
                <a asp-controller="Customer" asp-action="Index" class="btn btn-primary mt-auto">View Customers</a>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="card h-100 shadow-sm text-center p-3">
                <i class="fas fa-box fa-2x text-success mb-3"></i>
                <h5>@Model?.ProductCount Products</h5>
                <a asp-controller="Product" asp-action="Index" class="btn btn-success mt-auto">View Products</a>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="card h-100 shadow-sm text-center p-3">
                <i class="fas fa-shopping-cart fa-2x text-warning mb-3"></i>
                <h5>@Model?.OrderCount Orders</h5>
                <a asp-controller="Order" asp-action="Index" class="btn btn-warning mt-auto">View Orders</a>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="card h-100 shadow-sm text-center p-3">
                <i class="fas fa-upload fa-2x text-info mb-3"></i>
                <h5>File Upload</h5>
                <a asp-controller="Upload" asp-action="Index" class="btn btn-info mt-auto">Upload Files</a>
            </div>
        </div>
    </div>

    <!-- Featured Products Section -->
    <div class="col-12">
        <h3 class="mb-4">
            <i class="fas fa-star text-warning"></i> Featured Products
        </h3>

        @if (Model?.FeaturedProducts?.Any() == true)
        {
            <div class="row g-4">
                @foreach (var product in Model.FeaturedProducts.Take(8))
                {
                    <div class="col-lg-3 col-md-4 col-sm-6">
                        <div class="card h-100 shadow-sm">
                            @if (!string.IsNullOrWhiteSpace(product.ImageUrl))
                            {
                                <img src="@product.ImageUrl" class="card-img-top" alt="@product.ProductName" style="height: 180px; object-fit: cover;">
                            }
                            else
                            {
                                <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 180px;">
                                    <i class="fas fa-image fa-3x text-muted"></i>
                                </div>
                            }

                            <div class="card-body text-center d-flex flex-column">
                                <h6 class="mb-2">@product.ProductName</h6>
                                <p class="small text-muted flex-grow-1">
                                    @{
                                        var desc = product.Description ?? "";
                                        var displayDesc = desc.Length > 60 ? desc.Substring(0, 60) + "…" : desc;
                                    }
                                    @displayDesc
                                </p>
                                <div class="mt-auto">
                                    <p class="text-success fw-bold mb-1">@product.Price.ToString("C")</p>
                                    <small class="text-muted">Stock: @product.StockAvailable</small>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="alert alert-info mt-3">
                <i class="fas fa-info-circle"></i> No products available yet.
                <a asp-controller="Product" asp-action="Create" class="alert-link">Add your first product</a>!
            </div>
        }
    </div>
</div>
