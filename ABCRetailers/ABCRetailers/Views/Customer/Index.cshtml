@model IEnumerable<ABCRetailers.Models.Customer>
@{
    ViewData["Title"] = "Customers";
}

<div class="card shadow border-0">
    <!-- Header -->
    <div class="card-header bg-dark text-white py-4">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h3 class="h5 mb-1 fw-normal">Customers</h3>
                <p class="mb-0 opacity-75 small">Manage customer accounts</p>
            </div>
            <a asp-action="Create" class="btn btn-light btn-sm">
                Add Customer
            </a>
        </div>
    </div>

    <!-- Search Section -->
    <div class="card-body border-bottom">
        <form method="get" asp-action="Index" class="row g-3 align-items-end">
            <div class="col-md-8">
                <label for="searchString" class="form-label text-dark fw-medium">Search Customers</label>
                <div class="input-group">
                    <input type="text" class="form-control border"
                           id="searchString" name="searchString"
                           placeholder="Search by customer name..."
                           value="@ViewData["CurrentFilter"]">
                    <button type="submit" class="btn btn-dark">
                        Search
                    </button>
                </div>
                <div class="form-text">Enter customer name to filter results</div>
            </div>
            <div class="col-md-4">
                @if (!string.IsNullOrEmpty(ViewData["CurrentFilter"] as string))
                {
                    <a asp-action="Index" class="btn btn-outline-dark">
                        Clear Search
                    </a>
                }
            </div>
        </form>
    </div>

    <!-- Table Body -->
    <div class="card-body">
        @if (Model != null && Model.Any())
        {
            <div class="d-flex justify-content-between align-items-center mb-3">
                <p class="text-muted mb-0">
                    Showing <strong>@Model.Count()</strong> customer(s)
                    @if (!string.IsNullOrEmpty(ViewData["CurrentFilter"] as string))
                    {
                        <span>for "<strong>@ViewData["CurrentFilter"]</strong>"</span>
                    }
                </p>
            </div>

            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Customer ID</th>
                            <th>Name</th>
                            <th>Surname</th>
                            <th>Username</th>
                            <th>Email</th>
                            <th>Shipping Address</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var customer in Model)
                        {
                            <tr>
                                <td>
                                    <code class="text-dark">
                                        @(string.IsNullOrEmpty(customer?.Id) ? "-" : customer.Id.Substring(0, Math.Min(8, customer.Id.Length)) + "…")
                                    </code>
                                </td>
                                <td class="text-dark">@customer.Name</td>
                                <td class="text-dark">@customer.Surname</td>
                                <td class="text-dark">@customer.Username</td>
                                <td class="text-dark">@customer.Email</td>
                                <td class="text-dark">@customer.ShippingAddress</td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@customer.Id"
                                           class="btn btn-sm btn-outline-dark" title="Edit">
                                            Edit
                                        </a>
                                        <button type="button"
                                                class="btn btn-sm btn-outline-dark"
                                                onclick="confirmDelete('@customer.Id', '@(customer.Name + " " + customer.Surname)')"
                                                title="Delete">
                                            Delete
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-secondary border-0">
                @if (!string.IsNullOrEmpty(ViewData["CurrentFilter"] as string))
                {
                    <span>No customers found for "<strong>@ViewData["CurrentFilter"]</strong>".</span>
                    <a asp-action="Index" class="alert-link text-dark">Show all customers</a>
                }
                else
                {
                    <span>No customers found.</span>
                    <a asp-action="Create" class="alert-link text-dark">Add your first customer</a>
                }
            </div>
        }
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete customer <strong id="customerName"></strong>?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-dark" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="post" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-dark">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(customerId, customerName) {
            document.getElementById('customerName').textContent = customerName;
            document.getElementById('deleteForm').action =
                '@Url.Action("Delete", "Customer")/' + encodeURIComponent(customerId);
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }
    </script>
}