@model ABCRetailers.Models.Customer
@{
    ViewData["Title"] = "My Profile";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow border-0">
                <!-- Header -->
                <div class="card-header bg-dark text-white py-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h3 class="h5 mb-1 fw-normal">My Profile</h3>
                            <p class="mb-0 opacity-75 small">View and manage your personal information</p>
                        </div>
                        <a asp-action="EditProfile" class="btn btn-light btn-sm">
                            Edit Profile
                        </a>
                    </div>
                </div>

                <!-- Profile Information -->
                <div class="card-body p-4">
                    <!-- Personal Information -->
                    <div class="mb-4">
                        <h6 class="text-dark fw-medium mb-3 border-bottom pb-2">
                            Personal Information
                        </h6>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label text-dark fw-medium">First Name</label>
                                <div class="form-control bg-light border">@Model.Name</div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label text-dark fw-medium">Last Name</label>
                                <div class="form-control bg-light border">@Model.Surname</div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label text-dark fw-medium">Username</label>
                            <div class="form-control bg-light border">@Model.Username</div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label text-dark fw-medium">Email Address</label>
                            <div class="form-control bg-light border">@Model.Email</div>
                        </div>
                    </div>

                    <!-- Shipping Information -->
                    <div class="mb-4">
                        <h6 class="text-dark fw-medium mb-3 border-bottom pb-2">
                            Shipping Information
                        </h6>
                        <div class="mb-3">
                            <label class="form-label text-dark fw-medium">Shipping Address</label>
                            <div class="form-control bg-light border" style="min-height: 80px;">@Model.ShippingAddress</div>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="d-flex gap-2 pt-3 border-top">
                        <a asp-action="EditProfile" class="btn btn-dark flex-fill">
                            Edit Profile
                        </a>
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-dark">
                            Back to Products
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>