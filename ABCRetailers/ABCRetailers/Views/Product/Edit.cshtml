<!-- Views/Product/Edit.cshtml -->
@model ABCRetailers.Models.Product
@{
    ViewData["Title"] = "Edit Product";
}

<div class="row">
    <div class="col-lg-8">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0"><i class="fas fa-edit"></i> Edit Product</h5>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-3">
                        <label asp-for="ProductName" class="form-label"></label>
                        <input asp-for="ProductName" class="form-control" />
                        <span asp-validation-for="ProductName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Price" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="Price" class="form-control" type="number" step="0.01" min="0.01" id="Price" />
                            </div>
                            <span asp-validation-for="Price" class="text-danger"></span>
                            <p class="mt-1"><strong>Preview Price:</strong> <span id="pricePreview">@Model.Price.ToString("C")</span></p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="StockAvailable" class="form-label"></label>
                            <input asp-for="StockAvailable" class="form-control" type="number" min="0" />
                            <span asp-validation-for="StockAvailable" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Current Image</label>
                        <div class="mb-2">
                            @if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
                            {
                                <img src="@Model.ImageUrl" alt="Product Image" class="img-thumbnail" style="max-width:200px;" />
                            }
                            else
                            {
                                <div class="bg-light d-flex align-items-center justify-content-center" style="width:200px; height:200px;">
                                    <i class="fas fa-image fa-3x text-muted"></i>
                                </div>
                            }
                        </div>
                        <label for="imageFile" class="form-label">Replace Image</label>
                        <input type="file" name="imageFile" id="imageFile" class="form-control" accept="image/*" />
                    </div>

                    <div class="d-flex justify-content-end">
                        <a asp-action="Index" class="btn btn-light me-2">Cancel</a>
                        <button type="submit" class="btn btn-success shadow-sm">
                            <i class="fas fa-save"></i> Save Changes
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-success text-white">
                <h6 class="mb-0">Product Preview</h6>
            </div>
            <div class="card-body">
                <h6>@Model.ProductName</h6>
                <p class="text-muted">@Model.Description</p>
                <p><strong>Price:</strong> <span class="text-success">@Model.Price.ToString("C")</span></p>
                <p>
                    <strong>Stock:</strong>
                    <span class="badge bg-@(Model.StockAvailable > 10 ? "success" : Model.StockAvailable > 0 ? "warning" : "danger")">
                        @Model.StockAvailable
                    </span>
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.getElementById("Price").addEventListener("input", function () {
            const v = parseFloat(this.value || 0);
            document.getElementById("pricePreview").textContent = "$" + (isNaN(v) ? "0.00" : v.toFixed(2));
        });
    </script>
}