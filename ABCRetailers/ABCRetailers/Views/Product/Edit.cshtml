@model ABCRetailers.Models.Product
@{
    ViewData["Title"] = "Edit Product";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow border-0">
                <div class="card-header bg-dark text-white py-4">
                    <h3 class="h5 mb-0 fw-normal">Edit Product</h3>
                </div>
                <div class="card-body p-4">
                    <div class="row">
                        <div class="col-md-8">
                            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                                @Html.AntiForgeryToken()
                                <input type="hidden" asp-for="Id" />

                                <div asp-validation-summary="ModelOnly" class="alert alert-danger border-0 mb-4"></div>

                                <div class="mb-3">
                                    <label asp-for="ProductName" class="form-label text-dark fw-medium"></label>
                                    <input asp-for="ProductName" class="form-control border" />
                                    <span asp-validation-for="ProductName" class="text-danger small"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Description" class="form-label text-dark fw-medium"></label>
                                    <textarea asp-for="Description" class="form-control border" rows="3"></textarea>
                                    <span asp-validation-for="Description" class="text-danger small"></span>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="Price" class="form-label text-dark fw-medium"></label>
                                        <div class="input-group">
                                            <span class="input-group-text border bg-light">$</span>
                                            <input asp-for="Price" class="form-control border" type="number" step="0.01" min="0.01" id="Price" />
                                        </div>
                                        <span asp-validation-for="Price" class="text-danger small"></span>
                                        <p class="mt-2 text-muted"><strong>Preview Price:</strong> <span id="pricePreview" class="text-dark">@Model.Price.ToString("C")</span></p>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="StockAvailable" class="form-label text-dark fw-medium"></label>
                                        <input asp-for="StockAvailable" class="form-control border" type="number" min="0" />
                                        <span asp-validation-for="StockAvailable" class="text-danger small"></span>
                                    </div>
                                </div>

                                <div class="mb-4">
                                    <label class="form-label text-dark fw-medium">Current Image</label>
                                    <div class="mb-3">
                                        @if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
                                        {
                                            <img src="@Model.ImageUrl" alt="Product Image" class="img-thumbnail border" style="max-width:200px;" />
                                        }
                                        else
                                        {
                                            <div class="bg-light d-flex align-items-center justify-content-center border" style="width:200px; height:200px;">
                                                <i class="fas fa-image fa-2x text-muted"></i>
                                            </div>
                                        }
                                    </div>
                                    <label for="imageFile" class="form-label text-dark fw-medium">Replace Image</label>
                                    <input type="file" name="imageFile" id="imageFile" class="form-control border" accept="image/*" />
                                </div>

                                <div class="d-flex justify-content-end gap-2 pt-3 border-top">
                                    <a asp-action="Index" class="btn btn-outline-dark">Cancel</a>
                                    <button type="submit" class="btn btn-dark">
                                        Save Changes
                                    </button>
                                </div>
                            </form>
                        </div>

                        <div class="col-md-4">
                            <div class="card border-0 bg-light">
                                <div class="card-body">
                                    <h6 class="text-dark fw-medium mb-3">Product Preview</h6>
                                    <h6 class="text-dark">@Model.ProductName</h6>
                                    <p class="text-muted small">@Model.Description</p>
                                    <p class="mb-2"><strong class="text-dark">Price:</strong> <span class="text-dark">@Model.Price.ToString("C")</span></p>
                                    <p class="mb-0">
                                        <strong class="text-dark">Stock:</strong>
                                        <span class="badge bg-@(Model.StockAvailable > 10 ? "success" : Model.StockAvailable > 0 ? "warning" : "danger")">
                                            @Model.StockAvailable
                                        </span>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.getElementById("Price").addEventListener("input", function () {
            const v = parseFloat(this.value || 0);
            document.getElementById("pricePreview").textContent = "$" + (isNaN(v) ? "0.00" : v.toFixed(2));
        });
    </script>
}