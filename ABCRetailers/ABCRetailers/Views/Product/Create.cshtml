<!-- Views/Product/Create.cshtml -->
@model ABCRetailers.Models.Product
@{
    ViewData["Title"] = "Create Product";
}

<div class="row">
    <div class="col-lg-8">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0"><i class="fas fa-plus-square"></i> Add New Product</h5>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-3">
                        <label asp-for="ProductName" class="form-label"></label>
                        <input asp-for="ProductName" class="form-control" />
                        <span asp-validation-for="ProductName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Price" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="Price" class="form-control" type="number" step="0.01" min="0.01" id="Price" />
                            </div>
                            <span asp-validation-for="Price" class="text-danger"></span>
                            <p class="mt-1"><strong>Preview Price:</strong> <span id="pricePreview">$0.00</span></p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="StockAvailable" class="form-label"></label>
                            <input asp-for="StockAvailable" class="form-control" type="number" min="0" />
                            <span asp-validation-for="StockAvailable" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="imageFile" class="form-label">Product Image</label>
                        <input type="file" name="imageFile" id="imageFile" class="form-control" accept="image/*" />
                    </div>

                    <div class="d-flex justify-content-end">
                        <a asp-action="Index" class="btn btn-light me-2">Cancel</a>
                        <button type="submit" class="btn btn-success shadow-sm">
                            <i class="fas fa-save"></i> Create
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-success text-white">
                <h6 class="mb-0"><i class="fas fa-info-circle"></i> Product Guidelines</h6>
            </div>
            <div class="card-body small">
                <ul>
                    <li>Product Name & Description required</li>
                    <li>Price must be > $0</li>
                    <li>Upload high-quality images</li>
                </ul>
                <div class="alert alert-success mt-3">
                    <i class="fas fa-lightbulb"></i> High-quality images increase engagement!
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.getElementById("Price").addEventListener("input", function () {
            const v = parseFloat(this.value || 0);
            document.getElementById("pricePreview").textContent = "$" + (isNaN(v) ? "0.00" : v.toFixed(2));
        });
    </script>
}