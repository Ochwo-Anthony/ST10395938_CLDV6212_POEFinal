@model ABCRetailers.Models.Product
@{
    ViewData["Title"] = "Create Product";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow border-0">
                <div class="card-header bg-dark text-white py-4">
                    <h3 class="h5 mb-0 fw-normal">Create Product</h3>
                </div>
                <div class="card-body p-4">
                    <div class="row">
                        <div class="col-md-8">
                            <form asp-action="Create" method="post" enctype="multipart/form-data">
                                @Html.AntiForgeryToken()
                                <div asp-validation-summary="ModelOnly" class="alert alert-danger border-0 mb-4"></div>

                                <div class="mb-3">
                                    <label asp-for="ProductName" class="form-label text-dark fw-medium"></label>
                                    <input asp-for="ProductName" class="form-control border" />
                                    <span asp-validation-for="ProductName" class="text-danger small"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Description" class="form-label text-dark fw-medium"></label>
                                    <textarea asp-for="Description" class="form-control border" rows="3"></textarea>
                                    <span asp-validation-for="Description" class="text-danger small"></span>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="Price" class="form-label text-dark fw-medium"></label>
                                        <div class="input-group">
                                            <span class="input-group-text border bg-light">$</span>
                                            <input asp-for="Price" class="form-control border" type="number" step="0.01" min="0.01" id="Price" />
                                        </div>
                                        <span asp-validation-for="Price" class="text-danger small"></span>
                                        <p class="mt-2 text-muted"><strong>Preview Price:</strong> <span id="pricePreview" class="text-dark">$0.00</span></p>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="StockAvailable" class="form-label text-dark fw-medium"></label>
                                        <input asp-for="StockAvailable" class="form-control border" type="number" min="0" />
                                        <span asp-validation-for="StockAvailable" class="text-danger small"></span>
                                    </div>
                                </div>

                                <div class="mb-4">
                                    <label for="imageFile" class="form-label text-dark fw-medium">Product Image</label>
                                    <input type="file" name="imageFile" id="imageFile" class="form-control border" accept="image/*" />
                                </div>

                                <div class="d-flex justify-content-end gap-2 pt-3 border-top">
                                    <a asp-action="Index" class="btn btn-outline-dark">Cancel</a>
                                    <button type="submit" class="btn btn-dark">
                                        Create Product
                                    </button>
                                </div>
                            </form>
                        </div>

                        <div class="col-md-4">
                            <div class="card border-0 bg-light">
                                <div class="card-body">
                                    <h6 class="text-dark fw-medium mb-3">Product Guidelines</h6>
                                    <ul class="text-muted small mb-3">
                                        <li>Product Name & Description required</li>
                                        <li>Price must be greater than $0</li>
                                        <li>Upload high-quality images</li>
                                    </ul>
                                    <div class="alert alert-secondary border-0">
                                        <small class="text-muted">High-quality images increase customer engagement!</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.getElementById("Price").addEventListener("input", function () {
            const v = parseFloat(this.value || 0);
            document.getElementById("pricePreview").textContent = "$" + (isNaN(v) ? "0.00" : v.toFixed(2));
        });
    </script>
}