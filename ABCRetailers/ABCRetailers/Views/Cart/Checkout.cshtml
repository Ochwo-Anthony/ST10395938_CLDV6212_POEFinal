@model IEnumerable<ABCRetailers.Models.Cart>
@inject ABCRetailers.Services.IFunctionsApi _api

@{
    ViewData["Title"] = "Checkout";
    var cartItems = Model.ToList();
    decimal finalTotal = 0;

    // Get product details for each cart item
    var cartItemsWithDetails = new List<CartItemDetail>();
    foreach (var item in cartItems)
    {
        var product = await _api.GetProductAsync(item.ProductId);
        if (product != null)
        {
            var itemTotal = product.Price * item.Quantity;
            finalTotal += itemTotal;

            cartItemsWithDetails.Add(new CartItemDetail
            {
                CartItem = item,
                Product = product,
                Total = itemTotal
            });
        }
    }
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow border-0">
                <div class="card-header bg-dark text-white py-4">
                    <h3 class="h5 mb-0 fw-normal">Checkout</h3>
                </div>
                <div class="card-body p-4">
                    <!-- Order Summary -->
                    <div class="mb-4">
                        <h6 class="text-dark fw-medium mb-3 border-bottom pb-2">
                            Order Summary
                        </h6>

                        <div class="table-responsive">
                            <table class="table align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th>Product</th>
                                        <th class="text-center">Price</th>
                                        <th class="text-center">Quantity</th>
                                        <th class="text-center">Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var itemDetail in cartItemsWithDetails)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    @if (!string.IsNullOrWhiteSpace(itemDetail.Product.ImageUrl))
                                                    {
                                                        <img src="@itemDetail.Product.ImageUrl"
                                                             class="rounded me-3"
                                                             alt="@itemDetail.Product.ProductName"
                                                             style="width: 50px; height: 50px; object-fit: cover;">
                                                    }
                                                    else
                                                    {
                                                        <div class="bg-light rounded d-flex align-items-center justify-content-center me-3"
                                                             style="width: 50px; height: 50px;">
                                                            <i class="fas fa-image text-muted"></i>
                                                        </div>
                                                    }
                                                    <div>
                                                        <h6 class="mb-1 text-dark">@itemDetail.Product.ProductName</h6>
                                                        <small class="text-muted">ID: @itemDetail.CartItem.ProductId</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="text-center text-dark fw-medium">
                                                @itemDetail.Product.Price.ToString("C")
                                            </td>
                                            <td class="text-center">
                                                <span class="badge bg-dark">@itemDetail.CartItem.Quantity</span>
                                            </td>
                                            <td class="text-center text-dark fw-bold">
                                                @itemDetail.Total.ToString("C")
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot class="table-light">
                                    <tr>
                                        <td colspan="3" class="text-end fw-bold text-dark">Order Total:</td>
                                        <td class="text-center fw-bold fs-5 text-dark">@finalTotal.ToString("C")</td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>

                    <!-- Order Details -->
                    <div class="mb-4">
                        <h6 class="text-dark fw-medium mb-3 border-bottom pb-2">
                            Order Details
                        </h6>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label text-dark fw-medium">Number of Items</label>
                                    <div class="form-control bg-light border">@cartItems.Count</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label text-dark fw-medium">Total Amount</label>
                                    <div class="form-control bg-light border fw-bold">@finalTotal.ToString("C")</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="d-flex justify-content-between align-items-center pt-4 border-top">
                        <a asp-action="Index" class="btn btn-outline-dark">
                            <i class="fas fa-arrow-left me-2"></i>Back to Cart
                        </a>

                        <div class="d-flex align-items-center gap-3">
                            <div class="text-end">
                                <h5 class="text-dark mb-0">Total: @finalTotal.ToString("C")</h5>
                                <small class="text-muted">@cartItems.Count item(s)</small>
                            </div>

                            <form asp-action="CheckoutConfirmed" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-dark btn-lg px-4"
                                        onclick="return confirm('Are you sure you want to place this order?')">
                                    <i class="fas fa-check me-2"></i>Place Order
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    public class CartItemDetail
    {
        public Cart CartItem { get; set; } = null!;
        public ABCRetailers.Models.Product Product { get; set; } = null!;
        public decimal Total { get; set; }
    }
}